{% extends "layouts/index.html.twig" %}

{% block title %}Редактирование задачи #{{ item.id }}{% endblock %}

{% block content %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Редактирование задачи #{{ item.id }}</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" method="POST" id="form" action="/update?id={{ item.id }}">
            <div class="box-body">
                <div class="form-group">
                    <label for="text">Текст</label>
                    <textarea class="form-control" id="text" name="text" rows="3" placeholder="Введите ...">{{ item.text|e }}</textarea>
                </div>
                <div class="form-group">
                    <label for="image">Выполнено</label>
                    <input type="checkbox" name="executed" id="checkbox" value="1"
                        {%  if item.isExecuted() %}
                        checked="checked"
                        {% endif %}
                    >

                </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </form>



{% endblock %}